    "@types/btoa": "^1.2.3",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.14.2",
    "@types/object-hash": "^1.3.4",
    "@types/table": "^6.0.0",
    "@types/urijs": "^1.19.12",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
