    "fs": "^0.0.1-security",
    "html-to-formatted-text": "^2.6.0",
    "ip-address": "^7.0.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "object-hash": "^2.0.3",
    "qs": "^6.9.4",
    "table": "^6.0.0",
    "version_compare": "^0.0.3",
    "x2js": "^3.4.0",
    "xmldom": "^0.3.0"
  },
  "resolutions": {
    "@types/marked": "^0.6.5",
    "atob": "^2.1.2",
    "babel-plugin-istanbul": "^5.2.0",
    "exec-sh": "^0.3.2",
    "chokidar": "^3.1.0",
    "deep-extend": "^0.6.0",
    "follow-redirects": "^1.9.0",
    "handlebars": "^4.2.0",
    "istanbul-lib-source-maps": "^3.0.6",
    "jest-config": "^26.0.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.20",
    "lodash.merge": "^4.6.2",
    "lodash.template": "^4.5.0",
    "marked": "^0.7.0",
    "micromatch": "^3.1.10",
    "request": "^2.88.0",
    "sane": "^4.1.0",
    "sshpk": "^1.16.1",
    "terser-webpack-plugin": "^4.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint",
      "pre-push": "commitlint --verbose --from=origin/main"
    }
  },
  "scripts": {
    "changelog": "standard-changelog -i CHANGELOG.md -s -r 1",
    "build": "webpack --mode production --env production",
    "dev": "webpack --progress --colors",
    "dist": "npm run lint && npm run test && npm run build && npm run docs",
    "api": "typedoc --out dist/docs/ src",
    "docs": "npm run api && antora --stacktrace generate local-site.yml",
    "watch": "webpack --progress --colors --watch",
    "test": "jest",
    "watch-test": "jest --watch",
    "dist-test": "npm run dist",
    "smoke": "node test/smoke.js",
    "lint": "tslint 'src/**/*.ts' && tsc --project tsconfig-check.json",
    "cli": "ts-node src/CLI.ts",
    "docker-build": "npm ci && npm run dist-test && npm run changelog && ./fix-ownership.sh",
    "docker": "docker run --rm --name opennms-js -v `pwd`:/build -w /build node:carbon npm run docker-build"
  }
}
